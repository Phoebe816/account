// Body reset
html {
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
}

body {
  position relative  
  font-family $font-family-base
  color $--color-text-regular
  background-color $--background-color-base
  font-size 14px
}
body,
html {
    width 100%
    height 100%
    background: #fff;
    // background: url("../img/bg3.jpg") fixed center no-repeat;
    /*background-size: contain;  /* 背景图片同窗口完全自适应，并且不变形 */
}
// Horizontal rules
hr {
  border 0px
  border-top: 1px solid #ddd;
  margin 20px 0px;
}

// Headings，不直接对h标签设置
// -------------------------

h1, h2, h3, h4, h5, h6 {
  font-family: inherit;
  font-weight: 400;
  color: inherit;
  margin: 10px 0px;
  small,
  .small {
    font-weight: normal;
    color: inherit;
  }
}

h1,
h2,
h3 {
  small,
  .small {
    font-size: 65%;
  }
}

h4,
h5,
h6 {
  small,
  .small {
    font-size: 75%;
  }
}

h1 {
  font-size: 22px;
}

h2 {
  font-size: 20px;
}

h3 {
  font-size: 18px;
}

h4 {
  font-size: 16px;
}

h5,p {
  font-size: 14px;
}

h6 {
  font-size: 12px;
}

// Lists
ul,
ol {
  padding 0
  margin: 0px
  font-size: 14px
}
ol,
ul,
li {
    list-style: none;
}
// Links
a {  
  &,
  &:link,
  &:visited {
    cursor: pointer;
    text-decoration: none;
  }
  &:hover,
  &:active {
    text-decoration: none;
  }
}
//font init
.text-muted{
  color #777
}
pre code{
  line-height 1.8
}
.el-select{
  width 100%
}
.submitForm{
  width 60%
}
.mrgb20{
  margin-bottom 20px
}
.mrgT20{
  margin-top 20px
}
img {
    border: none;
}
address,
caption,
cite,
code,
dfn,
em,
strong,
th,
var {
    font-style: normal;
    font-weight: normal;
}
input,
textarea,
select,
button {
    font: 14px Verdana, Helvetica, Arial, sans-serif;
}

table {
    border-collapse: collapse;
    border-spacing: 0;
}